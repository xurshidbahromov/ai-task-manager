{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "api/index.py"
        },
        {
            "source": "/assets/(.*)",
            "destination": "frontend/dist/assets/$1"
        },
        {
            "source": "/((?!api|assets).*)",
            "destination": "frontend/dist/index.html"
        }
    ]
}